---
import { Image } from 'astro:assets'
import Cat from "../gambar/cat.png"
---
<section class="main-section max-w-4xl mx-auto">
  <Image src={Cat} alt='logo abs'></Image>
  <div class="heading">
  <h1>Sign</h1>
  <p>in</p>
  </div>
  <form class="login" action="api/auth/sign-in" method="POST">
    <label for="email">email</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="youremail@gmail.com"
      required
    />
    <label for="name">Password</label>
    <input
      type="password"
      id="email"
      name="password"
      placeholder="your super secret password"
      required
    />
    <button>submit</button>
    <p>don't have an account? <a href="/register">register instead</a></p>
  </form>
</section>
</Layout>

<style>
.heading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
}

.heading p,h1 {
  margin: 0;
  font-size: 30px;
}

.heading p {
  font-weight: 400;
}

h1 {
  color:#FF8011;
  font-weight: 600;
}

.login {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin: auto;
  margin-top:1rem;
  width: 20%;
  border: 2px solid;
  padding: 2rem;
}

.login input {
  padding: 5px;
  margin-top: 5px;
}

.login label {
  margin-top: 1rem;
}

.login button {
  margin-top: 1rem;
  padding: 3px;
  background-color: #FF8011;
  color: #ffffff;
  font-weight: 500;
  border: 1px solid black;
  filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.6));
}
</style>