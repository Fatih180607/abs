---
import { Image } from 'astro:assets'
import logo from '../gambar/logo.svg'
---
<nav>
    <div class="logo_text">
    <Image src={logo} alt='logo abs'></Image>
    <h1>Artisan<span class="text-gradient"> Beverage Studio</span></h1>
    </div>
    <div class="menu-toggle" id="menu-toggle">
        <div class="hamburger"><i class="fa-solid fa-bars fa-xl"></i></div>
    </div>
    <ul id="navbar">
        <li><a href="/#" id="home-link">Home</a></li>
        <li><a href="/about" id="about-link">About</a></li>
        <li><a href="/menu" id="menu-link">Menu</a></li>
        <li><button id="submit">LogOut</button></li>
    </ul>
</nav>
<script src="../slider-buat-js/components.js"></script>
<style>
   .logo_text {
    display: flex;
    align-items: center;
}

h1 {
    font-size: 2rem;
    font-family: "Caveat";
    color: #FF8011;
    padding: 1rem;
    margin: 0;
}

nav {
    justify-content: space-between;
    display: flex;
    align-items: center;
    padding-bottom: 5px;
    border-bottom: 1px solid;
    top: 0;
    position: sticky;
    background-color: rgba(17, 17, 17, 0.75);
    box-shadow: 1px 1px 8px 2px #43306c;
    z-index: 100;
}

ul {
    font-family: sans-serif;
    display: flex;
    margin: 0;
    padding: 0;
    list-style: none; 
}

li {
    padding: 1rem;
    font-size: 20px;
}

a {
    color: #FF8011;
    text-decoration: none;
}

a:hover {
    text-shadow: 0 0 10px #69e0ff, 0 0 20px #69e0ff, 0 0 40px #69e0ff;
    color: #fff;
}

.active {
    text-shadow: 0 0 10px #69e0ff, 0 0 20px #69e0ff, 0 0 40px #69e0ff;
    color: #fff;   
}

.menu-toggle {
    display: none;
    cursor: pointer;
}

.hamburger {
    width: 30px;
    height: 3px;
    /* background-color: white; */
    margin: 5px 0;
    transition: 0.3s ease-in-out;
}

/* Media Query untuk layar kecil */
@media (min-width: 320px) and (max-width: 767px) {
    ul {
        display: none;
        position: absolute;
        top: 60px;
        left: 0;
        right: 0;
        background-color: rgba(17, 17, 17, 0.9);
        flex-direction: column;
        transition: max-height 0.3s ease-in-out;
        overflow: hidden;
    }

    ul.show {
        display: flex;
        
    }
    .fa-solid{
        color: #fff;
    }

    .menu-toggle {
        display: block;
        background-color: transparent;
    }

    /* .hamburger.active {
        transform: rotate(45deg);
    } */

    .hamburger.active::before,
    .hamburger.active::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 3px;
        /* background-color: white; */
        transition: transform 0.3s ease-in-out;
    }

    .hamburger.active::before {
        transform: translateY(-8px) rotate(-45deg);
    }

    .hamburger.active::after {
        transform: translateY(8px) rotate(-45deg);
    }
}

      
</style>
